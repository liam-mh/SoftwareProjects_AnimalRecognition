<!DOCTYPE html>
<html lan="en" and dir="Itr">

<head>
    <meta charset="utf-8">
    <title>Admin-Logs</title>
    <link rel="stylesheet" href="index.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body style="min-height: 1700px;">

  <!-- Nav Bar -->
  <header>
    <nav class="navbar">
       <div class="navbar__container">
          <a href="/" id="navbar__logo"><img src="frontEndImages/elanco.png" alt="Logo" /></a>
          <div class="navbar__toggle" id="mobile-menu">
             <span class="bar"></span> <span class="bar"></span>
             <span class="bar"></span>
          </div>
          <ul class="navbar__menu">
            <li class="navbar__item">
              <a href="/admin" class="navbar__links">Search Data</a>
            </li>
            <li class="navbar__item">
              <a href="/" class="navbar__links">Logout</a>
            </li>
          </ul>
       </div>
    </nav>
  </header>

  <div class="main">
    <div class="main__container">

      <div class="main__content2">
        <h1>Welcome to Admin</h1>
        <div style="display:inline-block;">
          <button class="main__btn" onclick="filterByIsAnimalInImage()">Filter by Contains Animal</button>
          <button class="main__btn2" onclick="showContent()">View Most Common Animal</button>
        </div>
      </div>

        <div class="admin_results_box">

          <!-- Datastore data table -->
          <div id="content1">
            <table>
              <tr>
                <th></th>
                <th>Log Date</th>
                <th>Error Message</th> 
                <th>Response</th> 
                <th>Page Accessing</th>
                <th>Operating System</th>
                <th>All Error Data</th>
              </tr>
              <% for (let i = 0; i < data.length; i++) { %>
                <tr class="data-row">
                  <td><%= i+1 %></td>
                  <td><%= formatDate(data[i].timestamp) %></td> 
                  <td>"<%= data[i].message %>"</td>
                  <td>HTTP status code: <%= data[i].response.status %></td>
                  <td><%= data[i].request.url %></td>
                  <td><%= data[i].systemInfo.os %></td>
                  <td><button onclick="showData(<%= JSON.stringify(data[i]) %>)">View error</button></td>
                </tr>
              <% } %>
            </table>
          </div>

          <div id="content2" style="display:none; max-height: 100%; max-width: 100%;">
            
          </div>

        </div>
      </div>
    </div>    
  </div>  

  <div class="ocean">
      <div class="wave"></div>
      <div class="wave"></div>
  </div>

</body>

<!-- CSS and JS -->

<script>
  function showContent() {
    var content1 = document.getElementById("content1");
    var content2 = document.getElementById("content2");
    var button = document.querySelector('.main__btn2');
    
    if (content1.style.display === "none") {
      content1.style.display = "block";
      content2.style.display = "none";
      button.innerHTML = "View Most Common Animal";
    } else {
      content1.style.display = "none";
      content2.style.display = "block";
      button.innerHTML = "View All Data";
    }
  };  
</script>

<script>

function showData(data) {
  const existingRow = event.target.closest('.data-row');
  const existingNextRow = existingRow.nextSibling;
  if (existingNextRow && existingNextRow.classList && existingNextRow.classList.contains('data-row-details')) {
    // Details are already displayed, hide them and remove the row
    existingNextRow.remove();
    return;
  }
  const newRow = document.createElement('tr');
  newRow.classList.add('data-row-details');
  const newCell = document.createElement('td');
  newCell.colSpan = '7';
  const dataDetails = document.createElement('pre');
  dataDetails.textContent = JSON.stringify(data, null, 2);
  dataDetails.style.maxWidth = '100%';
  dataDetails.style.whiteSpace = 'pre-wrap';
  dataDetails.style.textAlign = 'left';
  newCell.appendChild(dataDetails);
  newRow.appendChild(newCell);
  existingRow.parentNode.insertBefore(newRow, existingRow.nextSibling);
}

</script>

</html>
